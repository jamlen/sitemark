extend ../layout.jade
include ../mixins/posts

block content
    .jumbotron
        != template.sections.welcome
    .panel.panel-default
        != template.sections.headline
    .panel.panel-default
        .panel-heading
            h2 Latest Articles
        .panel-body
            .row
                - for (var i = 0; i < 3; ++i) {
                    .col-sm-6.col-md-4
                        .thumbnail
                            if blogs[i].image
                                img.img-responsive(src=blogs[i].image, alt=blogs[i].title)
                            else
                                img.img-responsive(src='data:image/svg+xml;base64,')
                            end
                            .caption
                                +post-preview(blogs[i], true)
                - }
