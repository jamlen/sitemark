extend ./layout.jade
include ./mixins/posts

block content
    .jumbotron
        !{template.sections.welcome}
    .panel.panel-default
        .panel-heading
            h2 Latest Articles...
        .panel-body
            .row
                - for (var i = 0; i < 3; ++i) {
                    .col-sm-6.col-md-4
                        .thumbnail
                            img(data-src='holder.js/300x200', alt='300x200', src='data:image/svg+xml;base64,', style='width: 300px; height: 200px;')
                            .caption
                                +post-title(blogs[i])
                                .post-preview!= blogs[i].preview
                                .post-footer
                                    each tag in blogs[i].tags
                                        a.tag.btn.btn-primary.btn-sm(href='/tag/'+tag)=tag
                - }
