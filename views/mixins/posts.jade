mixin post-footer(post, hideDate)
    .post-footer
        if !hideDate
            h3
                =post.relativeDate
                if post.author
                    span
                        |&nbsp;by&nbsp;
                        =post.author
                end
        end
        each tag in post.tags
            a.tag.btn.btn-primary.btn-sm(href='/tag/'+tag)=tag

mixin post-title(post)
    h3
        a(href=post.url)= post.title

mixin post-preview(post, options)
    .post-container
        +post-title(post)
        if !options.hidePreview
            .post-preview!= post.preview
        +post-footer(post, options.hideDate)
